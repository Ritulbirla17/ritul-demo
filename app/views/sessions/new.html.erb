<h2>Login</h2>
<%= form_tag "/login", method: :post do %>
  <div class="mb-3 mt-3">
  <%= label_tag :email %>
  <%= text_field_tag :email%>
  </div>
  <div class="mb-3 mt-3">
  <%= label_tag :password %>
  <%= password_field_tag :password %>
  </div>
  
  <%= submit_tag "Submit", class: "btn btn-secondary" %>
<%end%>
<div class="mb-3 mt-3">
  <%= link_to "Don't have an account", signup_path, class: "btn btn-warning" %>
</div>
